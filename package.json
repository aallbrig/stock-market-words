{
  "name": "stock-market-words",
  "version": "1.0.0",
  "description": "Why? Why not. I remembered reading about how linux has a file with a dictionary in it.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:perf": "jest tests/perf/",
    "test:e2e": "jest tests/puppeteer/",
    "test:e2e:pages": "jest tests/puppeteer/website-pages.e2e.test.js",
    "test:e2e:ticker": "jest tests/puppeteer/ticker-ui.e2e.test.js",
    "test:e2e:ci": "TIMEOUT_SECONDS=10 jest tests/puppeteer/website-pages.e2e.test.js",
    "test:e2e:qa": "TEST_URL=https://stockmarketwords.com/ START_SERVER=false npm run test:e2e",
    "profile": "node --prof node_modules/.bin/jest tests/perf/ && echo '\nProfile generated! Process with: node --prof-process isolate-*.log > profile.txt'"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testTimeout": 90000,
    "reporters": [
      "default",
      [
        "jest-html-reporter",
        {
          "pageTitle": "Stock Market Words Test Report",
          "outputPath": "test-reports/index.html",
          "includeFailureMsg": true,
          "includeConsoleLog": true,
          "theme": "darkTheme",
          "sort": "status"
        }
      ],
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports",
          "outputName": "junit.xml",
          "classNameTemplate": "{classname}",
          "titleTemplate": "{title}",
          "ancestorSeparator": " â€º ",
          "usePathForSuiteName": true
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aallbrig/stock-market-words.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/aallbrig/stock-market-words/issues"
  },
  "homepage": "https://github.com/aallbrig/stock-market-words#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "puppeteer": "^24.34.0"
  }
}
